<main>
  <h2>Enter your details</h2>

  <% @error_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
  
  <form action="/users" method="post">
    <input class="u-full-width" type="email" placeholder="Email*" name="email">
    <input class="u-full-width" type="text" placeholder="Username*" name="username">
    <input class="u-full-width" type="password" placeholder="Password*" name="password">
    <input class="u-full-width" type="text" placeholder="Address Line 1" name="address_line_1">
    <input class="u-full-width" type="text" placeholder="Suburb" name="suburb">
    <input class="u-full-width" type="text" placeholder="Postcode*" name="postcode">
    <input class="u-full-width" type="text" placeholder="Availability" name="availability">
    <button class="u-full-width button-primary">Create account</button>
  </form>
</main>